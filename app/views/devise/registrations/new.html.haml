= render "/layouts/header"

.container
  .devise-box
    %h2.new-registration 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        .input-name
          = f.label :ニックネーム
          %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
      .field
        = f.label :姓
        %br/
        = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
      .field
        = f.label :姓（ふりがな）
        %br/
        = f.text_field :first_name_furigana, autofocus: true, autocomplete: "first_name_furigana"
      .field
        = f.label :名
        %br/
        = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
      .field
        = f.label :名（ふりがな）
        %br/
        = f.text_field :last_name_furigana, autofocus: true, autocomplete: "last_name_furigana"
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :パスワード
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password"
      .field
        = f.label :パスワード（確認）
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .actions
        = f.submit "登録"
    = render "devise/shared/links"

= render "/layouts/footer"

