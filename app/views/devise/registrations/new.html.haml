= render "/layouts/header"

.container
  .devise-box
    %h2.session-title 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :ニックネーム, class:'input-section'
        %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname",class:"devise-input"
      .field
        = f.label :姓, class:'input-section'
        %br/
        = f.text_field :first_name, autofocus: true, autocomplete: "first_name",class:"devise-input"
      .field
        = f.label :姓（ふりがな）, class:'input-section'
        %br/
        = f.text_field :first_name_furigana, autofocus: true, autocomplete: "first_name_furigana",class:"devise-input"
      .field
        = f.label :名, class:'input-section'
        %br/
        = f.text_field :last_name, autofocus: true, autocomplete: "last_name",class:"devise-input"
      .field
        = f.label :名（ふりがな）, class:'input-section'
        %br/
        = f.text_field :last_name_furigana, autofocus: true, autocomplete: "last_name_furigana",class:"devise-input"
      .field
        = f.label :email, class:'input-section'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"devise-input"
      .field
        = f.label :パスワード（６文字以上）, class:'input-section'
        = f.password_field :password, autocomplete: "new-password",class:"devise-input"
      .field
        = f.label :パスワード（確認）, class:'input-section'
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",class:"devise-input"
      .actions
        = f.submit "登録",class:'btn btn-primary btn-lg'
    = render "devise/shared/links"

= render "/layouts/footer"

